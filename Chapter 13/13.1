import os.path

infile = input("Enter a file name: ")
main_file = open(infile, "r")

if os.path.isfile(infile):
    string = main_file.read()
    lst = string.split()    # Make a list of words of file
    word = input("Enter the string to be removed: ")
    for x in lst:   # Remove the word from the list of words
        if x.lower() == word.lower():   # No casing match required
            lst.remove(x)
    main_file.close()

    main_file = open(infile, "w")   
    result = " ".join(lst)  # Make a string

    main_file.write(result) # Write result onto file
    main_file.close()
    print("Done")

else:
    print("Unable to remove string.")
